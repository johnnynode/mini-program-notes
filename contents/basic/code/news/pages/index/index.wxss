/**index.wxss**/
.bar-wrap-scroll {
    background: #54a2df;
    position:fixed;
    z-index:1;
}
.bar-wrap {
    display: flex;
    align-items:center;
    text-align: center;
    line-height: 90rpx;
    font-size: 30rpx;
}

.bar-item {
    padding: 0 40rpx;
    flex-shrink: 0;
    color: rgba(255,255,255,.8);
    position: relative;
}

.bar-item .b-line {
    position:absolute;
    width:30rpx;
    height:4rpx;
    background:#fff;
    bottom:12rpx;
    left:50%;
    margin-left:-15rpx;
    display: none;
}

.bar-item.cur .b-line {
    display: block;
}

.list-zone {
    padding: 0 20rpx;
}

.banner-item {
    position: relative;
    height: 360rpx;
}

.banner-item .bg-banner {
    position: absolute;
    top:0;
    bottom:0;
    left:0;
    right:0;
    width: 100%;
    height: 100%;
    z-index:-1;
}

.banner-item .box {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 200rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    color:#fff;
    background: rgba(0,0,0,.2)
}

.banner-item .box .title {
    line-height:54rpx;
    height:96rpx;
    padding:20rpx 0;
    font-size:36rpx;
}

.banner-item .box .bottom {
    display: flex;
    line-height:40rpx;
    height:40rpx;
    font-size: 30rpx;
    color: rgba(255, 255, 255, 0.8);
    padding-top:5rpx;
}

.banner-item .time {
    padding-left: 30rpx;
}

.list-item {
    display: flex;
    margin-top:25rpx;
    height: 170rpx;
    color:#999;
    font-size: 28rpx;
}

.list-item .right {
    margin: 20rpx 20rpx 0 0;
    width: 200rpx;
    height: 130rpx;
}

.list-item .left {
    flex: 1;
    padding-right: 20px;
}

.list-item .bottom {
    line-height: 50rpx;
}

.list-item .title {
    padding:12rpx 0;
    color:#666;
    height: 104rpx;
    box-sizing: border-box;
    line-height:44rpx;
}