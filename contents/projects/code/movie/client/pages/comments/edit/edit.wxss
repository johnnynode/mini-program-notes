/* pages/comment/comment.wxss */
.product-card {
  display: flex;
  align-items: center;
  padding-left: 26rpx;
  height: 200rpx;
  background: #FFFFFF;
}

.product-image {
  flex-shrink: 0;
  width: 160rpx;
  height: 160rpx;
}

.product-info {
  flex: 1;
  padding: 27rpx;
  height: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 40rpx;
}

.product-name {
  color: rgba(29, 29, 38, 0.8);
}

.product-price {
  margin-top: 12rpx;
  font-weight: bold;
}

.comment-list {
  margin-top: 16rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
}

.comment-title {
  padding: 25rpx 26rpx 14rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(29, 29, 38, 0.8);
  font-weight: bold;
}

.comment-card {
  display: flex;
  padding: 30rpx 23rpx 0 26rpx;
}

.comment-card:last-child .comment-cnt {
  border-bottom: none;
}

.comment-avatar {
  flex-shrink: 0;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.comment-cnt {
  flex: 1;
  margin-left: 24rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid rgba(151, 151, 151, 0.2);
}

.comment-top {
  display: flex;
  font-size: 25rpx;
  line-height: 36rpx;
  color: rgba(29, 29, 38, 0.5);
}

.comment-username {
  flex: 1;
}

.comment-content {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #1D1D26;
}

.preview-list {
  display: flex;
  margin-top: 16rpx;
}

.preview-item {
  margin-right: 10rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
}

.bottom-finish-btn {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background: rgb(0, 189, 0);
  color: #fff;
  font-size: 32rpx;
}

.comments-edit-page.movie-common {
  padding-bottom: 140rpx;
}

.comments-input-box .text-zone {
  padding-top: 40rpx;
}

.comments-input-box .text-zone textarea {
  text-align: center;
  line-height: 50rpx;
  padding: 20rpx 50rpx;
  font-size: 32rpx;
  height: 120rpx;
  width: 100%;
  box-sizing: border-box;
}

.comments-input-box .text-zone::-webkit-input-placeholder {
  line-height: 100rpx;
  font-size: 32rpx;
  position: relative;
  top: -10rpx;
}

.comments-input-box .voice-zone {
  padding-top: 80rpx;
  text-align: center;
}

.comments-input-box .voice-btn {
  border: 1px solid #b9c5d0;
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #b9c5d0;
  display: inline-block;
  border-radius: 5rpx;
}

.comments-input-box .voice-icon {
  width: 20px;
  height: 30px;
  background: no-repeat center;
  background-size: 100% auto;
  display: inline-block;
  margin-top: 5rpx;
}

.comments-input-box .voice-text {
  text-align: cneter;
  vertical-align: top;
  margin-top: 0;
  display: inline-block;
  padding-left: 10rpx;
  line-height: 80rpx;
}