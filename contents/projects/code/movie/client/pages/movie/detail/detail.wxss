/* pages/detail/detail.wxss */

.movie-detail-page {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 80rpx 30rpx 40rpx;
  box-sizing: border-box;
}

.movie-detail-page .main {
  width: 100%;
  height: 100%;
  background: #fff;
}

.movie-detail-page .pic {
  width: 200rpx;
  height: 300rpx;
  transform:translate3d(-50%, -44rpx, 0);
  -webkit-transform:translate3d(-50%, -44rpx, 0);
}

.movie-detail-page .main-inner {
  padding-top: 272rpx;
  color: #888;
  font-size: 28rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  top: 80rpx;
}

.movie-detail-page .bottom-bar-wrap {
  position: absolute;
  left: 9%;
  right: 9%;
  bottom: 80rpx;
  height: 76rpx;
  line-height: 76rpx;
}

.movie-detail-page .bottom-bar {
  width: 100%;
  text-align: center;
}

.movie-detail-page .bottom-bar .flex:first-child {
  margin-right: 3%;
}

.movie-detail-page .bottom-bar .flex:last-child {
  margin-left: 3%;
}

.movie-detail-page .bottom-bar .flex {
  background: pink;
  font-size: 28rpx;
}

.movie-detail-page .bottom-bar .flex view {
  display: inline-block;
}

.movie-detail-page .bottom-bar .icon {
  width: 60rpx;
  height: 60rpx;
  background: green;
  margin: 0 10px;
  vertical-align: top;
  margin-top: 5px;
}

.movie-detail-page .main-inner .title {
  font-size: 36rpx;
  text-align: center;
  line-height: 60rpx;
  color: #333;
  padding:0 80rpx;
}

.movie-detail-page .main-inner .dec {
  margin: 0 60rpx;
  color: #666;
}
